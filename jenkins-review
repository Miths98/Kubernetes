pipeline {
    agent any
       triggers {
        pollSCM "* * * * *"
       }
    stages {

        stage('Build') { 
            steps {
                sh 'mvn -B -DskipTests clean package' 
            }
        }
        stage('Build Docker Image') {
            when {
                branch 'master'
            }
            steps {
                echo '=== Building Review Docker Image ==='
                script {
                    app = docker.build("credentialsId: 'ecr:us-east-1:ratings-ecr-credentials'")
                }
            }
        }
        stage('Push Docker Image') {
            when {
                branch 'master'
            }
            steps {
                echo '=== Pushing Review Docker Image ==='
                script {
                    docker.withRegistry(credentialsId: 'ecr:us-east-1:ratings-ecr-credentials') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
      }   
  }
