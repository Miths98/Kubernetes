pipeline {
    agent any
       triggers {
        pollSCM "* * * * *"
       }
    stages {
        stage('Clone Repo'){
          node('master'){
            cleanWs()
            checkout([$class: 'GitSCM', branches: [[name: '*/$GIT_BRANCH']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: 'git@github.com:Miths98/Kubernetes.git']]])
          }
        }

        stage('Build Maven'){
          node('master'){
            withMaven(maven: 'apache-maven3.6'){
              sh "mvn clean package"
            } 
          }
        }
        stage('Build Docker Image') {
            when {
                branch 'master'
            }
            steps {
                echo '=== Building Review Docker Image ==='
                script {
                    app = docker.build("credentialsId: 'ecr:us-east-1:ratings-ecr-credentials'")
                }
            }
        }
        stage('Push Docker Image') {
            when {
                branch 'master'
            }
            steps {
                echo '=== Pushing Review Docker Image ==='
                script {
                    docker.withRegistry(credentialsId: 'ecr:us-east-1:ratings-ecr-credentials') {
                        app.push("${env.BUILD_NUMBER}")
                        app.push("latest")
                    }
                }
            }
        }
