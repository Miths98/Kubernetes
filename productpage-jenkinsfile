pipeline {
    agent any
       triggers {
        pollSCM "* * * * *"
       }
    stages {
       stage('Build') { 
            agent {
                docker {
                    image 'python:2-alpine' 
                }
            }
       }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        
      
  
